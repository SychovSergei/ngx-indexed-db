{
  "name": "ngx-indexed-db",
  "version": "21.0.0",
  "files": [
    "dist/ngx-indexed-db/**/*"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:playground": "ng serve --project playground",
    "start:ssr-playground": "ng serve --project ssr-playground",
    "build:lib": "ng build --project ngx-indexed-db -c production",
    "watch:lib": "ng build --project ngx-indexed-db -c development",
    "build:playground": "ng build --project playground",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "format": "prettier \"projects/**/*.{ts,json}\" --write",
    "serve:ssr:ssr-playground": "node dist/ssr-playground/server/server.mjs"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write"
    ],
    "*.{css}": [
      "prettier --write"
    ],
    "projects/ngx-indexed-db/**/*.{tsx,js}": [
      "ng lint"
    ]
  },
  "dependencies": {
    "@angular/animations": "^20.0.0",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/platform-browser-dynamic": "^20.0.0",
    "@angular/platform-server": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@angular/ssr": "^20.0.0",
    "express": "^4.21.2",
    "rxjs": "^7.0.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^18.18.0",
    "angular-eslint": "^19.7.1",
    "commitlint": "^12.1.4",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^9.16.0",
    "husky": ">=4",
    "jasmine-core": "~3.8.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": ">=10",
    "ng-packagr": "^20.0.0",
    "prettier": "2.1.1",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "8.26.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "types": "dist/ngx-indexed-db/lib/ngx-indexed-db.meta.d.ts"
}
